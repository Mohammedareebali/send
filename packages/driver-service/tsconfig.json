{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../../",
    "baseUrl": "./src",
    "paths": {
      "@services/*": ["./services/*"],
      "@types/*": ["./types/*"],
      "@shared/*": ["../../shared/src/*"]
    },
    "types": ["node", "jest", "express"]
  },
  "include": ["src/**/*.ts", "../shared/src/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
} 