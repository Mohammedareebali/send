{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "jest"],
    "paths": {
      "@shared/*": ["../shared/src/*"],
      "@send/shared": ["../shared/src"],
      "@send/shared/*": ["../shared/src/*"],
      "@prisma/client": ["../../test/prisma-client.ts"]
