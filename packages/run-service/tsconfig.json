{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/src/*"],
      "@send/shared": ["../shared/src"],
      "@send/shared/*": ["../shared/src/*"]
    },
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "../shared/src/**/__tests__/*",
    "../shared/src/**/*.test.ts"
  ],
  "references": [{ "path": "../shared" }]
}
