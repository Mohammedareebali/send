 generator client {
   provider = "prisma-client-js"
 }

 datasource db {
   provider = "postgresql"
   url      = env("DATABASE_URL")
 }

 model Student {
   id          String   @id @default(uuid())
   firstName   String
   lastName    String
   dateOfBirth DateTime
   grade       String
   school      String
   parentId    String
   createdAt   DateTime @default(now())
   updatedAt   DateTime @updatedAt

   @@map("students")
 }
