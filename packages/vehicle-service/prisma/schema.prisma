 generator client {
   provider = "prisma-client-js"
 }

 datasource db {
   provider = "postgresql"
   url      = env("DATABASE_URL")
 }

 enum VehicleStatus {
   AVAILABLE
   IN_USE
   MAINTENANCE
   OUT_OF_SERVICE
 }

 enum VehicleType {
   SEDAN
   SUV
   VAN
   BUS
 }

 enum AlertType {
   MAINTENANCE
   SAFETY
   PERFORMANCE
   FUEL
   INSURANCE
 }

 enum AlertSeverity {
   LOW
   MEDIUM
   HIGH
   CRITICAL
 }

 enum AlertStatus {
   ACTIVE
   RESOLVED
   ACKNOWLEDGED
 }

 model Vehicle {
   id                 String             @id @default(uuid())
   licensePlate       String             @unique
   make               String
   model              String
   year               Int
   type               VehicleType
   status             VehicleStatus      @default(AVAILABLE)
   capacity           Int
   currentRunId       String?
   lastMaintenanceDate DateTime?
   createdAt          DateTime           @default(now())
   updatedAt          DateTime           @updatedAt
   maintenanceRecords MaintenanceRecord[]
   alerts             Alert[]

   @@map("vehicles")
 }

 model MaintenanceRecord {
   id        String   @id @default(uuid())
   vehicleId String
   vehicle   Vehicle  @relation(fields: [vehicleId], references: [id])
   description String
   cost      Float
   date      DateTime
   createdAt DateTime @default(now())
   updatedAt DateTime @updatedAt

   @@map("maintenance_records")
 }

model Alert {
   id        String       @id @default(uuid())
   vehicleId String
   vehicle   Vehicle      @relation(fields: [vehicleId], references: [id])
   type      AlertType
   severity  AlertSeverity
   message   String
   timestamp DateTime
   status    AlertStatus  @default(ACTIVE)
  details   Json

  @@map("vehicle_alerts")
}

model TelemetryRecord {
  id        String   @id @default(uuid())
  vehicleId String
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id])
  speed     Float?
  fuelLevel Float?
  location  Json?
  recordedAt DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("telemetry_records")
}
